@page
@model SelfServiceHrProject.Pages.Adresses.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h3>Edit address</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Address.ID" />
            <div class="form-group">
                <label asp-for="Address.Country" class="control-label"></label>
                <input asp-for="Address.Country" class="form-control" />
                <span asp-validation-for="Address.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.City" class="control-label"></label>
                <input asp-for="Address.City" class="form-control" />
                <span asp-validation-for="Address.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.LocalAddress" class="control-label"></label>
                <input asp-for="Address.LocalAddress" class="form-control" />
                <span asp-validation-for="Address.LocalAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.OtherAddress" class="control-label"></label>
                <input asp-for="Address.OtherAddress" class="form-control" />
                <span asp-validation-for="Address.OtherAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.Employee.FullName" class="control-label"></label>
                <select asp-for="Address.EmployeesId" class="form-control" asp-items="ViewBag.EmployeesId"></select>
                <span asp-validation-for="Address.EmployeesId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" class="btn btn-outline-primary">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
