@page
@model SelfServiceHrProject.Pages.Leave.EditModel

@{
    ViewData["Title"] = "Edit";
}


<h4>Моля, пътвърдете или отхвърлете заявката за отпуск!</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Leaves.Id" />
            <div class="form-group" hidden>
                <label asp-for="Leaves.StartDate" class="control-label"></label>
                <input asp-for="Leaves.StartDate" class="form-control" />
                <span asp-validation-for="Leaves.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Leaves.EndDate" class="control-label"></label>
                <input asp-for="Leaves.EndDate" class="form-control" />
                <span asp-validation-for="Leaves.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Leaves.Status" class="control-label"></label>
                <select asp-for="Leaves.Status" class="form-control" asp-items="ViewBag.AcceptStatus"></select>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Leaves.EmployeesId" class="control-label"></label>
                <select asp-for="Leaves.EmployeesId" class="form-control" asp-items="ViewBag.EmployeesId"></select>
                <span asp-validation-for="Leaves.EmployeesId" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Leaves.LeaveReasonsId" class="control-label"></label>
                <select asp-for="Leaves.LeaveReasonsId" class="form-control" asp-items="ViewBag.LeaveReasonsId"></select>
                <span asp-validation-for="Leaves.LeaveReasonsId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Запази" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Leaves.StartDate)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Leaves.StartDate)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Leaves.EndDate)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Leaves.EndDate)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Leaves.Status)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Status)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Leaves.Emplpoyee)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Leaves.Emplpoyee.FullName)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Leaves.LeaveReasons)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Leaves.LeaveReasons.Name)
    </dd>
</dl>


<div>
    <a asp-page="./Index" class="btn btn-outline-primary">Обратно</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
