            <div class="form-group">
                <label asp-for="Leaves.EndDate" class="control-label"></label>
                <input asp-for="Leaves.EndDate" class="form-control" />
                <span asp-validation-for="Leaves.EndDate" class="text-danger"></span>
            </div>
