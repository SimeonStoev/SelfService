<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Leaves.StartDate" class="control-label"></label>
                <input asp-for="Leaves.StartDate" class="form-control" />
