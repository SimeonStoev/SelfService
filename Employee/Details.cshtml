@model SelfServiceHrProject.Pages.Employee.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h3>Details abount @Html.DisplayFor(model => model.Employees.FullName)</h3>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employees.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employees.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employees.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employees.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employees.Family)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employees.Family)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employees.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employees.PhoneNumber)
        </dd>
        @{ if (Model.Role == 2)
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Employees.EGN)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Employees.EGN)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Employees.Birthdate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Employees.Birthdate)
                </dd>
            }
        }
        @{ if (Model.Role == 1)
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BirthDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BirthDate)
                </dd>
            }
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employees.Oragnisation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employees.Oragnisation.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employees.Position)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employees.Position.Name)
        </dd>
        @{ if (Model.Role == 2)
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Salary.FullNetSalary)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Salary.FullNetSalary)
                </dd>
            }
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address.fullAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.fullAddress)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index" class="btn btn-outline-primary">Back</a>
</div>
