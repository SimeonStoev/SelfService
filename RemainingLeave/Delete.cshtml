@page
@model SelfServiceHrProject.Pages.RemainingLeave.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>RemainingLeaves</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RemainingLeaves.RemainingDays)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RemainingLeaves.RemainingDays)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RemainingLeaves.Employee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RemainingLeaves.Employee.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RemainingLeaves.LeaveReason)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RemainingLeaves.LeaveReason.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="RemainingLeaves.Id" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" />
        <a asp-page="./Index" class="btn btn-outline-primary">Back</a>
    </form>
</div>
